{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "env": {
    "DISABLE_AUTOUPDATER": "1"
  },
  "permissions": {
    "allow": [
      "Bash(pnpm test)",
      "Bash(gh pr view:*)",
      "Bash(ls:*)",
      "Bash(find:*)",
      "Bash(cd:*)",
      "Bash(curl https:*)",
      "Bash(wget https:*)",
      "mcp__serena",
      "mcp__chrome-devtools",
      "mcp__context7",
      "Bash(nvm use:*)",
      "Bash(source ~/.bashrc)",
      "Bash(npx expo run:ios:*)"
    ],
    "deny": [
      "Bash(sudo:*)",
      "NotebookEdit"
    ]
  },
  "hooks": {
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "~/.dotfiles/claude/mcp/serena-wrapper.sh start"
          }
        ]
      },
      {
        "matcher": "clear",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/on-clear.sh"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "node ~/.claude/statusline.js"
  }
}
