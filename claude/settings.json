{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "env": {
    "DISABLE_AUTOUPDATER": "1"
  },
  "permissions": {
    "allow": [
      "Bash(pnpm test)",
      "Bash(gh pr view:*)",
      "Bash(ls:*)",
      "Bash(find:*)",
      "Bash(cd:*)",
      "Bash(curl https:*)",
      "Bash(wget https:*)"
    ],
    "deny": [
      "Bash(sudo:*)",
      "NotebookEdit"
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "node ~/.claude/statusline.js"
  },
  "alwaysThinkingEnabled": false,
  "hooks": {
    "SessionStart": [
      {
        "matcher": "clear",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/on-clear.sh"
          }
        ]
      }
    ]
  }
}
